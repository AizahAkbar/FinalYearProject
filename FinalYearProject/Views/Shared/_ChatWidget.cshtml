<head>
    <link rel="stylesheet" href="~/css/chat.css" asp-append-version="true" />
</head>

<div class="chat-widget">
    <div class="chat-widget-header" id="chatToggle">
        <span>Chat with Us</span>
        <button class="minimize-button" aria-label="Toggle chat">+</button>
    </div>
    <div class="chat-widget-container" id="chatContainer">
        <div class="chat-messages" id="widgetChatMessages">
            <!-- Chat messages will be dynamically inserted here -->
        </div>
        <div class="chat-input-container">
            <label for="widgetMessageInput" class="visually-hidden">Type your message</label>
            <input type="text" id="widgetMessageInput" class="chat-input" placeholder="Type your message here..." aria-label="Type your message" />
            <button id="widgetSendButton" class="chat-send-button">Send</button>
        </div>
    </div>
</div>
