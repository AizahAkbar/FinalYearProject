@model IEnumerable<FinalYearProject.ViewModels.BakeFrontEnd>

@{
    ViewData["Title"] = "Search Products";
}

<head>
    <link rel="stylesheet" href="~/css/search.css" />
</head>

<div class="search-container">
    <div class="search-header">
        <h1>Search Products</h1>
        @* <a asp-action="Create" class="create-new-btn">Create New</a> *@
    </div>
    <div class="bakes-grid">
        @foreach (var item in Model)
        {
            <div class="bake-card">
                <div class="bake-card-content">
                    <h3 class="bake-name">
                        <a asp-controller="Bakes" asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                    </h3>
                    <p class="bake-price">£@item.Price.ToString("F2")</p>
                    <p class="bake-description">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
            </div>
        }
    </div>
