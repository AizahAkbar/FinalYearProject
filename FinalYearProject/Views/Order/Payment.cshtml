@model FinalYearProject.ViewModels.PaymentViewModel

<div class="container mt-4">
    <h2>Payment Information</h2>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="ProcessPayment" method="post">
                        <div class="mb-3">
                            <label asp-for="Payment.PaymentMethod" class="form-label">Payment Method</label>
                            <select asp-for="Payment.PaymentMethod" class="form-select">
                                <option value="CreditCard">Credit Card</option>
                                <option value="DebitCard">Debit Card</option>
                            </select>
                            <span asp-validation-for="Payment.PaymentMethod" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Payment.CardHolderName" class="form-label">Card Holder Name</label>
                            <input asp-for="Payment.CardHolderName" class="form-control" />
                            <span asp-validation-for="Payment.CardHolderName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Payment.CardNumber" class="form-label">Card Number</label>
                            <input asp-for="Payment.CardNumber" class="form-control" />
                            <span asp-validation-for="Payment.CardNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Payment.ExpiryDate" class="form-label">Expiry Date (MM/YY)</label>
                                <input asp-for="Payment.ExpiryDate" class="form-control" placeholder="MM/YY" />
                                <span asp-validation-for="Payment.ExpiryDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Payment.CVV" class="form-label">CVV</label>
                                <input asp-for="Payment.CVV" class="form-control" />
                                <span asp-validation-for="Payment.CVV" class="text-danger"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Process Payment</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    @foreach (var item in Model.Basket.Bakes)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.Name x @item.Quantity</span>
                            <span>£@(item.Price * item.Quantity)</span>
                        </div>
                    }
                    <hr />
                    <div class="d-flex justify-content-between">
                        <strong>Total Amount:</strong>
                        <strong>£@Model.TotalAmount</strong>
                    </div>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Delivery Information</h5>
                    <p class="mb-1">Method: @Model.DeliveryInformation.DeliveryMethod</p>
                    @* should be address whatever *@
                    <p class="mb-1">Address: @Model.DeliveryInformation.StreetAddress</p>
                    <p class="mb-0">Preferred Date: @Model.DeliveryInformation.PreferredDeliveryDate?.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}