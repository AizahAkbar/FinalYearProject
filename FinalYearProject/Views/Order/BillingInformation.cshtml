@model FinalYearProject.ViewModels.BillingInformationViewModel

<div class="container mt-4">
    <h2>Billing Information</h2>

    <div class="row">
        <div class="col-md-8">
            <form method="post" asp-action="BillingInformation">
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Payment Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="BillingInformation.CardHolderName" class="form-label"></label>
                            <input asp-for="BillingInformation.CardHolderName" class="form-control" required>
                            <span asp-validation-for="BillingInformation.CardHolderName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BillingInformation.CardNumber" class="form-label"></label>
                            <input asp-for="BillingInformation.CardNumber" class="form-control" required>
                            <span asp-validation-for="BillingInformation.CardNumber" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BillingInformation.ExpiryDate" class="form-label"></label>
                                <input asp-for="BillingInformation.ExpiryDate" class="form-control" placeholder="MM/YY" required>
                                <span asp-validation-for="BillingInformation.ExpiryDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="BillingInformation.CVV" class="form-label"></label>
                                <input asp-for="BillingInformation.CVV" class="form-control" required>
                                <span asp-validation-for="BillingInformation.CVV" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Billing Address</h5>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="sameAsDelivery">
                            <label class="form-check-label" for="sameAsDelivery">Same as delivery address</label>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="BillingInformation.BillingCountry" class="form-label"></label>
                            <select asp-for="BillingInformation.BillingCountry" class="form-select" required>
                                <option value="">Select a country</option>
                                <option value="United Kingdom">United Kingdom</option>
                                <option value="Ireland">Ireland</option>
                                <option value="France">France</option>
                                <option value="Germany">Germany</option>
                            </select>
                            <span asp-validation-for="BillingInformation.BillingCountry" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BillingInformation.BillingAddress" class="form-label"></label>
                            <input asp-for="BillingInformation.BillingAddress" class="form-control" required>
                            <span asp-validation-for="BillingInformation.BillingAddress" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="BillingInformation.BillingCity" class="form-label"></label>
                                <input asp-for="BillingInformation.BillingCity" class="form-control" required>
                                <span asp-validation-for="BillingInformation.BillingCity" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BillingInformation.BillingPostCode" class="form-label"></label>
                                <input asp-for="BillingInformation.BillingPostCode" class="form-control" required>
                                <span asp-validation-for="BillingInformation.BillingPostCode" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a asp-action="DeliveryInformation" class="btn btn-secondary me-md-2">Back</a>
                    <button type="submit" class="btn btn-primary">Continue to Payment</button>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.Basket.Bakes)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>@item.Name x @item.Quantity</span>
                            <span>£@(item.Price * item.Quantity)</span>
                        </div>
                    }
                    <hr>
                    <div class="d-flex justify-content-between">
                        <strong>Total</strong>
                        <strong>£@Model.Basket.Bakes.Sum(b => b.Price * b.Quantity)</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.getElementById('sameAsDelivery').addEventListener('change', function() {
            if (this.checked) {
                document.getElementById('BillingInformation_BillingCountry').value = '@Model.DeliveryInformation.Country';
                document.getElementById('BillingInformation_BillingAddress').value = '@Model.DeliveryInformation.StreetAddress';
                document.getElementById('BillingInformation_BillingCity').value = '@Model.DeliveryInformation.City';
                document.getElementById('BillingInformation_BillingPostCode').value = '@Model.DeliveryInformation.PostCode';
            } else {
                document.getElementById('BillingInformation_BillingCountry').value = '';
                document.getElementById('BillingInformation_BillingAddress').value = '';
                document.getElementById('BillingInformation_BillingCity').value = '';
                document.getElementById('BillingInformation_BillingPostCode').value = '';
            }
        });
    </script>
}