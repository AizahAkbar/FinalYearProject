@using FinalYearProject.ViewModels
@model ReviewViewModel

<head>
    <link rel="stylesheet" href="~/css/review.css" />
</head>

<div class="container mt-4">
    <h2>Write a Review</h2>
    <form asp-action="Create" method="post">
        <input type="hidden" asp-for="BakeId" />

        <div class="form-group mb-3">
            <label>Rating</label>
            <div class="rating">
                @for (int i = 5; i >= 1; i--)
                {
                    <input type="radio" asp-for="Rating" value="@i" id="star@(i)" />
                    <label for="star@(i)"><i class="fas fa-star"></i></label>
                }
            </div>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Description">Review</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit Review</button>
        <a asp-controller="Bakes" asp-action="Details" asp-route-id="@Model.BakeId" class="btn btn-secondary">Cancel</a>
    </form>
</div>